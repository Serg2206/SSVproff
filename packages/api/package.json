{
  "name": "@ssvproff/api",
  "version": "0.1.0",
  "private": true,
  "description": "FastAPI backend service for SSVproff monorepo",
  "main": "app/main.py",
  "scripts": {
    "dev": "uvicorn app.main:app --reload --host 0.0.0.0 --port 8001",
