    "python-dotenv": "^1.0.0"
  },
  "devDependencies": {
    "pytest": "^7.4.0",
    "pytest-asyncio": "^0.21.0",
    "httpx": "^0.25.0",
    "black": "^23.11.0",
    "flake8": "^6.1.0",
    "mypy": "^1.7.0"
  },
  "engines": {
    "python": ">=3.11"
  }
}
