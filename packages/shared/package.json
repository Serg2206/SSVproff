{
  "name": "@ssvproff/shared",
  "version": "0.1.0",
  "private": true,
  "description": "Shared utilities, types, and constants for SSVproff monorepo",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "lint": "eslint src/ --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "dependencies": {},
  "devDependencies": {
    "typescript": "^5.3.2",
    "@types/node": "^20.10.0",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "prettier": "^3.1.0"
  },
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=18.0.0"
  }
}
