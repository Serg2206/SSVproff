
{
  "$schema": "https://json.schemastore.org/commitlintrc",
  "extends": ["@commitlint/config-conventional"],
  "rules": {
    "type-enum": [
      2,
      "always",
      [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "chore",
        "ci",
        "build",
        "revert"
      ]
    ],
    "scope-enum": [
      2,
      "always",
      [
        "api",
        "web",
        "docs",
        "flows",
        "data-meta",
        "ci",
        "deps",
        "config"
      ]
    ]
  }
}
